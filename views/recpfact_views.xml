
<odoo>
    <record id="view_recpfact_form" model="ir.ui.view">
        <field name="name">recpfact.form</field>
        <field name="model">recpfact</field>
        <field name="arch" type="xml">
            <form string="Recep Fact">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="recpfact_pdf"/>
                        <field name="recpfact_pdf_name"/>
                    </group>
                    <footer>
                        <button string="Procesar Adjunto" type="object" name="check_attachments" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_recpfact" model="ir.actions.act_window">
        <field name="name">Recep Fact</field>
        <field name="res_model">recpfact</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_recpfact" name="Recep Fact" action="action_recpfact"/>
</odoo>
